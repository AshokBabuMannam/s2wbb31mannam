extends layout
block content
  h1= title
  p Welcome to the icecream 
  div(class="container-fluid")
        div(class="row")
            -
                let icecream = [
                    {
                        "breed": "Siberian husk",
                        "age": 11,
                        "name": "Liger"
                    },
                    {
                        "breed": "Itaian greyhound",
                        "age": 10,
                        "name": "Bitch"
                    },
                    {
                        "breed": "Retriver",
                        "age": 15,
                        "name": "Tommy"
                    },                   
                ]
            each v,index in icecream
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.breed}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.name}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.age}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased icecream ${intemNo+1}`)
        }