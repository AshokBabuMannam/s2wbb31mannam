extends layout
block content
  h1= title
  p Welcome to the icecream 
  div(class="container-fluid")
        div(class="row")
            -
                let icecream = [
                    {
                        "flavor": "Vanila",
                        "price": 11,
                        "quantity": "1"
                    },
                    {
                        "flavor": "Butter",
                        "price": 10,
                        "quantity": "2"
                    },
                    {
                        "flavor": "Sirachi",
                        "price": 15,
                        "quantity": "3"
                    },                   
                ]
            each v,index in icecream
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.flavor}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.quantity}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased icecream ${intemNo+1}`)
        }